<Page x:Class="MoonlighterItem.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="WelcomePage">

    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
        <!-- Логотип -->
        <Image Source="Images/Moonlighter-Logo.png" Width="200" Height="80"  Stretch="UniformToFill" Margin="0 -50 0 10"/>

        <!-- Заголовок -->
        <TextBlock Text="ЭНЦИКЛОПЕДИЯ АРТЕФАКТОВ" 
                   FontSize="30" FontWeight="ExtraBold" TextAlignment="Center" Margin="0,0,0,20"
                   Foreground="#FF1B2A24"/>

        <!-- Приветственный текст -->
        <TextBlock Text="Добро пожаловать!" 
                   FontSize="20" FontStyle="Italic" FontWeight="DemiBold" TextWrapping="Wrap" TextAlignment="Center"
                   Foreground="#FF2E4A42"/>
        <TextBlock Text="Здесь собрана полная информация о каждом артефакте, найденном в подземельях!" 
                   FontSize="20" FontStyle="Italic" FontWeight="DemiBold" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,20"
                   Foreground="#FF2E4A42"/>

        <!-- Возможности программы -->
        <TextBlock Text="🔍 ФУНКЦИИ СПРАВОЧНИКА 🔍" 
                   FontSize="22" FontWeight="Black" TextAlignment="Center" Margin="0,0,0,10"
                   Foreground="#FF1B2A24"/>

        <TextBlock Text="✔ Просматривайте полную информацию об артефактах: стоимость, происхождение, ценность." 
                   FontSize="18" TextWrapping="Wrap" TextAlignment="Center" Width="900"
                   Foreground="#FF3B5249"/>
        <TextBlock Text="✔ Используйте удобный поиск для мгновенного нахождения нужных предметов." 
                   FontSize="18" TextWrapping="Wrap" TextAlignment="Center" Width="900"
                   Foreground="#FF3B5249"/>
        <TextBlock Text="✔ Фильтруйте артефакты по типу подземелья для быстрого доступа к важным данным." 
                   FontSize="18" TextWrapping="Wrap" TextAlignment="Center" Width="900"
                   Foreground="#FF3B5249"/>

        <!-- Как использовать программу -->
        <TextBlock Text="⚙ КАК ПОЛЬЗОВАТЬСЯ ⚙" 
                   FontSize="22" FontWeight="Black" TextAlignment="Center" Margin="0,20,0,10"
                   Foreground="#FF1B2A24"/>

        <TextBlock Text="✔ Воспользуйтесь строкой поиска для мгновенного нахождения артефакта." 
                   FontSize="18" TextWrapping="Wrap" TextAlignment="Center" Width="900"
                   Foreground="#FF3B5249"/>
        <TextBlock Text="✔ Выберите подземелье, чтобы отобразить только соответствующие артефакты." 
                   FontSize="18" TextWrapping="Wrap" TextAlignment="Center" Width="900"
                   Foreground="#FF3B5249"/>

        <!-- Пожелание удачи -->
        <TextBlock Text="🏆 Пусть каждый найденный артефакт ведет вас к славе и богатству! 🏆" 
                   FontSize="20" FontWeight="Black" TextAlignment="Center" Margin="0,20,0,0"
                   Foreground="#FF1B2A24"/>
    </StackPanel>
</Page>