<Page x:Class="MoonlighterItem.ArtifactsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <Page.Resources>
        <!-- Ресурс для кнопки раскрытия ComboBox -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Border x:Name="Border" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    CornerRadius="10">
                <Path x:Name="Arrow" 
                      Fill="Black" 
                      HorizontalAlignment="Right"
                      Margin="0 0 10 0"
                      VerticalAlignment="Center"
                      Data="M0,0 L4,4 8,0 Z"/>
            </Border>
        </ControlTemplate>

        <!-- Ресурс для текстового поля внутри ComboBox -->
        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border x:Name="Border" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    CornerRadius="10">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
        </ControlTemplate>
    </Page.Resources>

    <Grid>
        <!-- Панель поиска и фильтрации -->
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,20,10,20">
            <Grid.ColumnDefinitions>
                <!-- Поиск: 60% ширины -->
                <ColumnDefinition Width="6*" />
                <!-- Фильтр: 40% ширины -->
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>

            <!-- Поиск -->
            <Border CornerRadius="15" Grid.Column="0" Margin="5">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFE0E0E0" Offset="0"/>
                        <GradientStop Color="#FFF0F0F0" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3" Color="Black"/>
                </Border.Effect>
                <TextBox x:Name="SearchTextBox" 
                         Height="40" 
                         Padding="8" 
                         FontSize="20"
                         TextAlignment="Center"
                         FontFamily="TT Milks"
                         BorderThickness="0" 
                         Background="Transparent"
                         Text="Поиск..."
                         Foreground="Gray"
                         GotFocus="SearchTextBox_GotFocus"
                         LostFocus="SearchTextBox_LostFocus"
                         TextChanged="SearchTextBox_TextChanged"/>
            </Border>

            <!-- Фильтр -->
            <Border CornerRadius="15" Grid.Column="1" Margin="5">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFE0E0E0" Offset="0"/>
                        <GradientStop Color="#FFF0F0F0" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3" Color="Black"/>
                </Border.Effect>
                <ComboBox x:Name="DungeonFilterComboBox" 
                          Height="30" 
                          Padding="5" 
                          FontSize="20"
                          FontFamily="TT Milks"
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          Foreground="Black"
                          BorderThickness="0"
                          Background="Transparent"
                          SelectionChanged="DungeonFilterComboBox_SelectionChanged"
                          DisplayMemberPath=".">
                    <!-- Стиль для ComboBox -->
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <ToggleButton x:Name="ToggleButton" 
                                                          Template="{StaticResource ComboBoxToggleButton}" 
                                                          Grid.Column="2" 
                                                          Focusable="false"
                                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                                          ClickMode="Press">
                                            </ToggleButton>
                                            <ContentPresenter x:Name="ContentSite"
                                                              IsHitTestVisible="False" 
                                                              Content="{TemplateBinding SelectionBoxItem}"
                                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                              Margin="5,3,25,3"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center" />
                                            <TextBox x:Name="PART_EditableTextBox"
                                                     Style="{x:Null}" 
                                                     Template="{StaticResource ComboBoxTextBox}" 
                                                     HorizontalAlignment="Left" 
                                                     VerticalAlignment="Center" 
                                                     Margin="5,3,23,3"
                                                     Focusable="True" 
                                                     Background="Transparent"
                                                     Visibility="Hidden"
                                                     IsReadOnly="{TemplateBinding IsReadOnly}" />
                                            <Popup x:Name="Popup"
                                                   Placement="Bottom"
                                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                                   AllowsTransparency="True" 
                                                   Focusable="False"
                                                   PopupAnimation="Slide">
                                                <Grid x:Name="DropDown"
                                                      SnapsToDevicePixels="True"                
                                                      MinWidth="{TemplateBinding ActualWidth}"
                                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                    <Border x:Name="DropDownBorder"
                                                            Background="White"
                                                            BorderBrush="#FFE0E0E0"
                                                            BorderThickness="1"
                                                            CornerRadius="15"/>
                                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                    </ScrollViewer>
                                                </Grid>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Style>
                    <!-- Стиль для выпадающего списка -->
                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontFamily" Value="TT Milks"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBoxItem">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="10"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFE0E0E0"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#FFD0D0D0"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>
            </Border>
        </Grid>

        <!-- Список предметов -->
        <ScrollViewer VerticalScrollBarVisibility="Hidden" Margin="0,80,0,0">
            <ItemsControl x:Name="ArtifactsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Основной контейнер для элемента -->
                        <Border CornerRadius="20" Padding="0" Margin="10 7 10 10" Width="225" Height="190">
                            <!-- Тень для блока -->
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="5" BlurRadius="10" Color="Black" Opacity="0.5"/>
                            </Border.Effect>

                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FF3A6351" Offset="0"/>
                                    <GradientStop Color="#FF3B6249" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <!-- Контент блока -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Название предмета -->
                                <TextBlock Text="{Binding Name}" 
                                           FontFamily="Arial" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="White" 
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,0"/>

                                <Image Source="{Binding ImagePath}" 
                                       Width="50" 
                                       Height="50" 
                                       Margin="0,10,0,5"
                                       Stretch="Uniform"/>

                                <!-- Подземелье -->
                                <TextBlock Text="{Binding Dungeon}" 
                                           FontFamily="TT Milks" 
                                           FontSize="20" 
                                           Foreground="#FFE0E0E0" 
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Margin="0,0,0,0"/>

                                <!-- Базовая цена -->
                                <TextBlock Text="{Binding BasePrice, StringFormat='Базовая стоимость: {0}'}" 
                                           FontFamily="TT Milks" 
                                           FontSize="16" 
                                           Foreground="#FFE0E0E0" 
                                           TextAlignment="Center"
                                           Margin="0,0,0,0"/>

                                <!-- Цена при спросе -->
                                <TextBlock Text="{Binding HighDemandPrice, StringFormat='Цена при спросе: {0}'}" 
                                           FontFamily="TT Milks" 
                                           FontSize="16" 
                                           Foreground="#FFE0E0E0" 
                                           TextAlignment="Center"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>